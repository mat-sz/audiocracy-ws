{
  "name": "audiocracy-ws",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv-flow": "^3.1.0",
    "@types/node": "^14.14.10",
    "@types/ws": "^7.4.0",
    "bcrypt": "^3.0.6",
    "dotenv-flow": "^3.2.0",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3",
    "node-mpv": "2.0.0-beta.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2",
    "ws": "^7.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "__tests__/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "dev": "ts-node-dev src/index.ts --respawn --transpileOnly"
  }
}
